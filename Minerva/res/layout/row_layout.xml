<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/row_size"
    android:layout_gravity="left">
    
    <ImageView
        android:id="@+id/imageViewThumbnail"
        android:layout_width="@dimen/row_size"
        android:scaleType="centerCrop"
        android:layout_height="@dimen/row_size"
        android:layout_marginRight="8dp"
        android:src="@drawable/abc_ab_solid_dark_holo"
        android:contentDescription="@string/image"/>

        <TextView
            android:id="@+id/txtViewRowTitle"
            android:layout_toRightOf="@id/imageViewThumbnail"
            android:layout_alignBaseline="@id/imageViewThumbnail"
            android:text="@string/text_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_size"
            android:textStyle="bold"/>


</RelativeLayout>